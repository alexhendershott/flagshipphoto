<div class="container">
  <div class="row">
    <div class="col-md-12">

      <%= image_tag @pin.image.url(:thumb) %>

      <p>
        <strong>Description:</strong>
        <%= @pin.description %>
      </p>

      <% if @pin.user == current_user %>
        <%= link_to 'Edit', edit_pin_path(@pin) %>
      <% end %>
      <%= link_to 'Back', pins_path %>

    </div>
  </div>
</div>
