<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default panel-account card">
        <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <p class="panel-info">Forgot your password?</p>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "Email Address", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Reset", class: "btn btn-primary btn-material" %>
          </div>
        <% end %>
      </div>
      
      <div class="panel-footer">
        <%= render "devise/shared/links" %>
      </div>

    </div>
  </div>
</div>
